{
  "name": "codepen-fetcher",
  "version": "1.0.2",
  "description": "An unofficial CodePen Node.js library built with TypeScript, capable of fetching the HTML, CSS, and JS source code of public Pens without authentication.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "lint": "eslint .",
    "test": "vitest --dir tests/unit",
    "test:unit": "vitest run --dir tests/unit --coverage --coverage.reporter text",
    "test:integration": "vitest run --dir tests/integration"
  },
  "engines": {
    "node": ">20.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://github.com/6chinwei/codepen-fetcher",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/6chinwei/codepen-fetcher.git"
  },
  "author": "6chinwei <6chinwei@gmail.com>",
  "license": "MIT",
  "keywords": [
    "codepen",
    "typescript",
    "graphql",
    "download",
    "fetch",
    "html",
    "css",
    "javascript"
  ],
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/eslint-plugin": "^1.1.20",
    "eslint": "^9.17.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "gql-query-builder": "^3.8.0"
  }
}
